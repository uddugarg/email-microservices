# Application
PORT=3000
NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=email_service

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=email-microservice

# Authentication
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=1d

# Encryption
ENCRYPTION_KEY=your-encryption-key-should-be-very-strong

# Gmail OAuth
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REDIRECT_URL=http://localhost:3000/frontend/oauth/gmail/callback

# Outlook OAuth
OUTLOOK_CLIENT_ID=your-outlook-client-id
OUTLOOK_CLIENT_SECRET=your-outlook-client-secret
OUTLOOK_REDIRECT_URL=http://localhost:3000/frontend/oauth/outlook/callback

# Rate Limiting
RATE_LIMIT=60
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVELS=error,warn,log